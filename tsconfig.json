{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@api/*": [
        "src/Modules/api/*"
      ],
      "@bots/*": [
        "src/Modules/bots/*"
      ],
      "@core/*": [
        "src/Modules/core/*"
      ],
      "@omikuji/*": [
        "src/Modules/omikuji/*"
      ],
      "@type": [
        "src/Modules/type.ts"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/test/*"
  ]
}